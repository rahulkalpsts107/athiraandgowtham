{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "plugins": ["html"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "globals": {
    "dataLayer": "writable",
    "gtag": "readonly",
    "Sentry": "readonly",
    "YT": "readonly"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "warn",
    "no-var": "error"
  },
  "ignorePatterns": ["node_modules/", "*.min.js"]
}
